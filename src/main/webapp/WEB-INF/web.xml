<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name xml:lang="pr-BR">Linketinder</display-name>

    <servlet>
        <servlet-name>candidato</servlet-name>
        <servlet-class>controller.candidato.CandidatoController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>allCandidatos</servlet-name>
        <servlet-class>controller.candidato.AllCandidatosController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>empresa</servlet-name>
        <servlet-class>controller.empresa.EmpresaController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>allEmpresas</servlet-name>
        <servlet-class>controller.empresa.AllEmpresasController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>vaga</servlet-name>
        <servlet-class>controller.vaga.VagaController</servlet-class>
    </servlet>


    <servlet>
        <servlet-name>allVagas</servlet-name>
        <servlet-class>controller.vaga.AllVagasController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>test</servlet-name>
        <servlet-class>controller.util.TestController</servlet-class>
    </servlet>

</web-app>
